<project name="updatecvs" default="main" basedir=".">

  <property file="build.properties" />

  <property name="root.dir" value="${project.home}"/>
  <property name="logs.dir" value="${root.dir}/build/logs"/>


  <target name="prepare">
    <mkdir dir="${logs.dir}" />

    <tstamp>
      <format property="tstamp" pattern="yyyyMMdd" />
    </tstamp>

    <property name="log.file" value="${logs.dir}/updatecvs-${tstamp}.log"/>
  </target>


  <target name="main" depends="prepare">

    <echo message="Update Zeos DBO Project from CVS..."
      file="${log.file}" append="true" />

    <exec dir="${root.dir}" executable="cvs"
      output="${log.file}" append="true" >
       <arg value="update"/> 
       <arg value="-d"/> 
       <arg value="-P"/> 
    </exec>
 
  </target>

</project>
